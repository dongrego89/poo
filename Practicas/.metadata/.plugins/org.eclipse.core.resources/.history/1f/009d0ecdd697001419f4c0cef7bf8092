#ifndef RULETA_H_
#define RULETA_H_

#include "crupier.h"
#include "jugador.h"
#include<list>
#include<string>

using namespace std;

class Ruleta{
private:
	int banca_;
	int bola_;
	list<Jugador>jugadores_;
	Crupier crupier_;

public:
	Ruleta(Crupier c);

	inline int getBanca() const {
		return banca_;
	}

	inline bool setBanca(int banca) {
		if(banca>0){
			banca_ = banca;
			return true;
		}
		return false;
	}

	inline int getBola() const {
		return bola_;
	}

	bool setBola(int bola) {
		if(bola>-1 && bola<37){
			bola_ = bola;
			return true;
		}
		return false;
	}

	Crupier getCrupier() const {
		return crupier_;
	}

	void setCrupier(const Crupier &c) {
		crupier_ = c;
	}
	
	list<Jugador> getJugadores()const{
		return jugadores_;
	}
	bool addJugador(const Jugador &j);

	int deleteJugador(string dni);
	int deleteJugador(const Jugador &j);

	void escribeJugadores();
	void leeJugadores();

	void giraRuleta();
	void getPremios();

	string apuestaColor();
	string apuestaAltura();
	string apuestaParidad();


};
#endif /* RULETA_H_ */
